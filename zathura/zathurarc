# Open document in fit-width mode
set adjust-open "best-fit"

# One page per row
set pages-per-row 1

# Stop at page boundaries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-step 80

# Statusbar settings
set statusbar-basename "true"
set statusbar-page-percent "true"

# Zoom settings
set guioptions "s"

# Theme
set font "HackNerdFontMono 12"
set default-fg "#fbf1c7"
set default-bg "#282828"

set statusbar-fg "#fbf1c7"
set statusbar-bg "#282828"

set inputbar-fg "#fbf1c7"
set inputbar-bg "#282828"

set notification-error-fg "#282828"
set notification-error-bg "#fb4934"

set notification-warning-fg "#282828"
set notification-warning-bg "#fabd2f"

set highlight-color "#fabd2f"
set highlight-active-color "#8ec07c"

set completion-fg "#fbf1c7"
set completion-bg "#282828"

set completion-group-fg "#fbf1c7"
set completion-group-bg "#3c3836"

set completion-highlight-fg "#282828"
set completion-highlight-bg "#8ec07c"

set notification-fg "#282828"
set notification-bg "#8ec07c"

set index-fg "#fbf1c7"
set index-bg "#282828"
set index-active-fg "#282828"
set index-active-bg "#8ec07c"

set recolor "true"
set recolor-lightcolor "#3c3836"
set recolor-darkcolor "#fbf1c7"
set recolor-reverse-video "true"
set recolor-keephue "true"

set render-loading "false"
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
